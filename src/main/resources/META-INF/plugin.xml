<idea-plugin>
    <id>com.hxc.stock-record</id>
    <name>Stock-record</name>
    <vendor email="hanglos@163.com" url="https://www.baidu.com">huangxc</vendor>
    <version>1.0.1</version>
    <idea-version since-build="212" until-build="243.*"/>

    <description><![CDATA[
    用于记录股票信息的插件<br>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>com.hxc.stockrecord.settings.StockSettingsState</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="stockRecord" secondary="true" anchor="right"
                    icon="/META-INF/pluginIcon.svg"
                    factoryClass="com.hxc.stockrecord.toolwindow.StockToolWindowFactory"/>
        <applicationConfigurable parentId="tools"
                                 instance="com.hxc.stockrecord.settings.StockSettingsConfigurable"
                                 id="com.hxc.stockrecord.settings.StockSettingsConfigurable"
                                 displayName="Stock Settings"/>
        <applicationService serviceImplementation="com.hxc.stockrecord.service.WechatBindingService"/>
    </extensions>
</idea-plugin>
